// Dashboard Page Component
const DashboardPage = ({ activeTab, switchTab, navigateHome }) => {
  const [sidebarOpen, setSidebarOpen] = useState(false);
  const focusRingClasses = "focus-visible:ring-2 focus-visible:ring-[#00e5ff]";
